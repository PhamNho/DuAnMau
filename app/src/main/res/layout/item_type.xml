<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="8dp"
    android:orientation="horizontal"
    android:padding="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="8dp"
        tools:ignore="UselessParent">

        <ImageView
            android:layout_marginEnd="10dp"
            android:id="@+id/imgAvatar_TheLoai"
            android:layout_width="0dp"
            android:layout_height="70dp"
            android:layout_weight="0.5"
            android:src="@drawable/ic_book_type"
            tools:ignore="ContentDescription" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:padding="8dp">

            <TextView
                android:textStyle="bold"
                android:id="@+id/tvName_Book_Type_Item_Type"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:textSize="12sp"
                android:layout_marginTop="10dp"
                android:id="@+id/tvType_ID_Item_Type"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <ImageView
            android:id="@+id/imgEdit_Book_Type_Item_Type"
            android:layout_gravity="center_vertical"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:src="@drawable/ic_edit"
            android:layout_weight="0.25"
            tools:ignore="ContentDescription" />
        <ImageView
            android:id="@+id/imgDelete_Book_Type_Item_Type"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="10dp"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:src="@drawable/ic_delete"
            android:layout_weight="0.25"
            tools:ignore="ContentDescription" />
    </LinearLayout>
</LinearLayout>